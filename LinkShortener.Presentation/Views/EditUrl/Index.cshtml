@model UrlViewModel

@{
    ViewData["Title"] = "Изменение ссылки";
}

<h1 class="text-center">Изменение ссылки</h1>

<form asp-controller="EditUrl" asp-action="Edit" method="post">
    <div class="input-group">
        <input class="form-control" type="text" placeholder="Ссылка" asp-for="LongUrl">
        <span class="input-group-text" id="basic-addon1">
            <button class="btn btn-success" type="submit">Изменить</button>
        </span> 

        @if (Model is not null)
        {
            <input type="hidden" value="@Model.Id" asp-for="Id">
        }
    </div>

    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
    {
        <span class="fw-bold text-danger">@error.ErrorMessage</span> <br/>
    }
</form>